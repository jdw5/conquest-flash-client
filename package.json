{
  "name": "@conquest/flash",
  "version": "0.0.1",
  "description": "Retrieve and add flash messages to your inertia application",
  "keywords": [],
  "scripts": {
    "dev": "vite",
    "build": "npm run format && vite build && vue-tsc --declaration --emitDeclarationOnly",
    "format": "npx @biomejs/biome format --write src/",
    "patch": "npm version patch --no-git-tag-version",
    "minor": "npm version minor --no-git-tag-version",
    "major": "npm version major --no-git-tag-version",
    "release": "npm run build && npm publish"
  },
  "author": "Joshua Wallace",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdw5/conquest-flash-client.git"
  },
  "homepage": "https://github.com/jdw5/conquest-flash-client#readme",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/conquest.umd.cjs",
  "module": "./dist/conquest.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/conquest.js",
      "require": "./dist/conquest.umd.cjs"
    }
  },
  "peerDependencies": {
    "@inertiajs/vue3": "^1.0.0",
		"axios": "^1.2.0",
		"vue": "^3.x"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@types/node": "^18.0.0",
    "axios": "^1.2.0",
    "typescript": "^4.5.4",
    "vite": "^4.0.4"
  }
}